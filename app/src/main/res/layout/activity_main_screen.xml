<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context=".MainScreen">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#515266"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="5">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    app:cardCornerRadius="35dp"

                    >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/search"
                        tools:ignore="ContentDescription"

                        />

                    <EditText
                        android:id="@+id/edt_search_text"
                        android:layout_width="267dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:background="@android:color/transparent"

                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="#131313"
                        android:textSize="14sp" />


                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:backgroundTint="#515266"
                    android:scaleType="centerCrop"
                    android:src="@drawable/microphone"
                    tools:ignore="ContentDescripion">

                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="2">

                <TextView
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="24sp">

                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black">

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="2">

                <TextView
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="24sp">

                </TextView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black">

                </EditText>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="10">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/proxy"
                    tools:ignore="ContentDescription"
                    android:layout_weight="2">

                </ImageView>

                <Button
                    android:layout_width="150dp"
                    android:layout_margin="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Image upload"
                    android:backgroundTint="#302927"
                    android:padding="10dp"
                    android:layout_weight="2">

                </Button>
            </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Product Upload"
        android:backgroundTint="#302927"
        android:padding="10dp"
        android:layout_weight="2">

    </Button>

        </LinearLayout>





